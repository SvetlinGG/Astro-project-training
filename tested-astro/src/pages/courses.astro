---
import Layout from '../layouts/Layout.astro';
import MainLayout from '../components/MainLayout.astro';
---

<Layout>
<MainLayout />
<div class="bg-black/30 backdrop-blur-sm">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-none py-16 sm:py-24 lg:py-32">
        <h2 class="text-2xl font-bold text-white">Frontend Courses</h2>
  
        <div class="mt-6 space-y-12 lg:grid lg:grid-cols-3 lg:space-y-0 lg:gap-x-6">
          <div class="group relative bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <img src="https://www.webscocktail.com/wp-content/uploads/2021/07/difference-html-css-js.jpg" alt="Desk with leather desk pad, walnut desk organizer, wireless keyboard and mouse, and porcelain mug." class="w-full h-60 rounded-lg bg-white object-cover group-hover:opacity-75" />
            <h3 class="mt-6 text-sm text-gray-300">
              <a href="#">
                <span class="absolute inset-0"></span>
                HTML/CSS/JavaScript
              </a>
            </h3>
            <p class="text-base font-semibold text-white">Work from home accessories</p>
          </div>
          <div class="group relative bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-02-edition-02.jpg" alt="Wood table with porcelain mug, leather journal, brass pen, leather key ring, and a houseplant." class="w-full h-60 rounded-lg bg-white object-cover group-hover:opacity-75" />
            <h3 class="mt-6 text-sm text-gray-300">
              <a href="#">
                <span class="absolute inset-0"></span>
                Self-Improvement
              </a>
            </h3>
            <p class="text-base font-semibold text-white">Journals and note-taking</p>
          </div>
          <div class="group relative bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <img src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-02-edition-03.jpg" alt="Collection of four insulated travel bottles on wooden shelf." class="w-full h-60 rounded-lg bg-white object-cover group-hover:opacity-75" />
            <h3 class="mt-6 text-sm text-gray-300">
              <a href="#">
                <span class="absolute inset-0"></span>
                Travel
              </a>
            </h3>
            <p class="text-base font-semibold text-white">Daily commute essentials</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>